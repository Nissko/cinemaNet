@page "/login"
@using Cinema.Client.Services
@inject AuthService AuthService
@inject NavigationManager NavManager

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header text-center">
                <h4>Вход аккаунт</h4>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" class="form-control" @bind="Email" placeholder="Введите email" />
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Пароль</label>
                    <input type="password" id="password" class="form-control" @bind="Password" placeholder="Введите пароль" />
                </div>

                <button class="btn btn-primary w-100" @onclick="HandleLogin">Войти</button>
                <a class="btn btn-primary w-100 mt-sm-2" href="/register">Зарегистрироваться</a>

                @if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <div class="mt-3 alert alert-danger" role="alert">
                        @ErrorMessage
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private string Email = "";
    private string Password = "";
    private string ErrorMessage = "";

    private async Task HandleLogin()
    {
        try
        {
            await AuthService.Login(Email, Password);
            NavManager.NavigateTo("/", forceLoad: true);
        }
        catch (Exception ex)
        {
            ErrorMessage = "Ошибка входа: " + ex.Message;
        }
    }
}